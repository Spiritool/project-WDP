  <style>
   body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: white;
  overflow-x: hidden; /* Menambahkan overflow-x: hidden; untuk mencegah penggeseran halaman */
}


    .navbar {
      padding: 15px 0;
    }

    .navbar-nav .nav-link {
      font-size: 18px;
      margin-left: 20px;
    }

    .container {
      max-width: 900px;
      /* Mengubah max-width menjadi 900px */
      margin: 0 auto;
      padding: 20px;
    }

    .row {
      display: flex;
      justify-content: space-between;
    }

    .contact-info {
      background-color: #000;
      color: #fff;
      padding: 20px;
      border-radius: 10px;
      flex: 1;
      /* Mengubah flex value menjadi 1 */
      margin-right: 20px;
      max-width: 670px;
      /* Mengatur lebar maksimum contact-info */
      max-height: 550px;
      overflow-y: auto;
    }
    .custom-div {
            width: 545px;
            height: 756px;
            background: linear-gradient(0deg, black 0%, black 100%);
            border-radius: 10px;
            color: white;
            padding: 20px;
        }


    .contact-info h2 {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    .contact-info p {
      margin: 10px 0;
      display: flex;
      align-items: center;
    }

    .social-icons {
      display: flex;
      margin-top: 20px;
    }

    .social-icons svg {
            fill: white;
            margin-right: 10px;
        }

    .contact-form {
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      flex: 1;
      max-width: 750px;
      /* Mengatur lebar maksimum */
      margin: 0 auto;
      /* Menengahkan form */
    }


    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
    }

    .form-group input,
    .form-group textarea {
      width: calc(100% - 20px);
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .form-group input[type="radio"] {
      width: auto;
    }

    footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #909090;
  padding: 10px 0;
  text-align: center;
  width: fit-content; /* Mengatur lebar footer agar hanya sebesar yang diperlukan oleh isinya */
  margin-left: auto; /* Menempatkan footer di sebelah kanan */
  margin-right: auto; /* Menempatkan footer di sebelah kiri */
}

footer nav {
  display: flex;
  justify-content: flex-end;
}

footer nav a {
  margin-left: 20px;
  text-decoration: none;
  color: #080000;
}

footer nav a:hover {
  text-decoration: underline;
}


